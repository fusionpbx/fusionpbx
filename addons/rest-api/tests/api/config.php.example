 *    INSERT INTO v_domains (domain_uuid, domain_name, domain_enabled)
 *    VALUES ('your-uuid', 'test.example.com', 'true');
 *
 * 3. Create a test API key:
 *    INSERT INTO v_api_keys (api_key_uuid, domain_uuid, api_key, api_key_enabled)
