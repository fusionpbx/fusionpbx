	<extension name="please_hold" number="1001-1019" continue="false" app_uuid="c3ea29d1-db41-421e-91b7-b0984e50bcae" enabled="false">
		<condition field="destination_number" expression="^(10[01][0-9])$">
			<action application="set" data="transfer_ringback=$${hold_music}"/>
